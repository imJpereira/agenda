<%- include('includes/head') %>

    <%- include('includes/nav.ejs') %>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg-8 my-3">
                <h1 class="text-center">Entre em sua conta ou faça seu cadastro</h1>
                <p class="text-center lead">Faça login ou crie a sua conta!</p>

                <%- include('includes/messages') %>

                <div class="row">
                    <div class="col-lg my-5">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você ainda não tiver uma conta, faça seu cadastro abaixo:</p>
                        <form class="signup" action="/login/signup" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group">
                              <label>Endereço de email</label>
                              <input type="email" class="form-control" placeholder="Email" name="email">
                              <span class="msg-email"></span>
                            </div>
                            <div class="form-group">
                              <label>Senha</label>
                              <input type="password" class="form-control" placeholder="Senha" name="password">
                              <span class="msg-password"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Criar minha conta</button>
                        </form>
                    </div>

                    <div class="col-lg mx-5 my-5">
                        <h4>Faça seu login</h4>
                        <p>Se você já tem uma conta, faça login abaixo: </p>
                        <form class="signin" action="/login/signin" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-group">
                              <label>Endereço de email</label>
                              <input type="email" class="form-control" placeholder="Email" name="email">
                              <span class="msg-email"></span>
                            </div>
                            <div class="form-group">
                              <label>Senha</label>
                              <input type="password" class="form-control" placeholder="Senha" name="password">
                              <span class="msg-password"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                        </form>
                    </div>
                </div>

            </div>
                

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('includes/footer') %>
