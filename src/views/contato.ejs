<%- include('includes/head') %>

    <%- include('includes/nav.ejs') %>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg-8 my-5">
                <h1 class="text-center">Contato</h1>
                <p class="text-center lead">Crie ou edite o seu contato</p>
                
                <%- include('includes/messages') %>

                <% if (contact._id) { %>
                    <form class="contact" action="/contato/edit/<%= contact._id %>" method="POST">
                <% } else { %>
                    <form class="contact" action="/contato/register" method="POST">
                <% } %>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label>Nome: <span class="name"></span></label>
                          <input value="<%= contact.name %>" type="text" class="form-control mb-3" placeholder="Nome" name="name">

                          <label>Sobrenome: </label>
                          <input value="<%= contact.surname %>" type="text" class="form-control mb-3" placeholder="Sobrenome" name="surname">

                          <label>Email: <span class="email"></span></label>
                          <input value="<%= contact.email %>" type="email" class="form-control mb-3" placeholder="Email" name="email">

                          <label>Telefone: <span class="tel"></span></label>
                          <input value="<%= contact.tel %>" type="tel" class="form-control mb-3" placeholder="Telefone" name="tel">

                        </div>
                        <% if (contact._id) { %>
                            <button type="submit" class="btn btn-primary">Atualizar contato</button> 
                        <% } else { %>
                            <button type="submit" class="btn btn-primary">Criar contato</button>
                        <% } %>
                    </form>
            </div>  

            <div class="col-lg-2"></div>
        </div>
    </div>

<%- include('includes/footer') %>
