<%- include('includes/head') %>

    <%- include('includes/nav.ejs') %>
    
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            
            <div class="col-lg-8 my-5">
                <h1 class="text-center">Agenda</h1>
                <p class="text-center lead">Seus contatos estão abaixo</p>

                <%- include('includes/messages') %>

                <% if (contacts.length > 0) { %>

                    <div class="responsive-table">
                        <table class="table my-3">
                            <tr class="font-weight-bold">
                                <th>Nome</th>
                                <th>Sobrenome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                            </tr>
                            <% contacts.forEach(contact => { %>
                                <tr>
                                    <td class="mt-3 py-3"><%= contact.name %></td>
                                    <td class="mt-3 py-3"><%= contact.surname %></td>
                                    <td class="mt-3 py-3"><%= contact.email %></td>
                                    <td class="mt-3 py-3"><%= contact.tel %></td>
                                    <td class="mt-3 py-3"><a href="/contato/<%= contact._id %>">Editar</a></td>
                                    <td class="mt-3 py-3"><a class="text-danger" href="/contato/delete/<%= contact._id %>">Excluir</a></td>
                                </tr>
                                <% }); %>
                            </table>
                        </div>
                        
                    <% } else { %>
                            
                            <h3 class="text-center mt-5">Você ainda não possui contatos!</h3>
                    
                    <% } %>
                    
                </div>
                
                <div class="col-lg-2"></div>
            </div>
        </div>

<%- include('includes/footer') %>
